<table class="table table-striped table-condensed table-hover table-bordered">
  <caption>Sales Ticket ID#<%= @ticket.id -%> Line Items</caption>
  <thead>
    <tr>
      <th>id</th>
      <th>SKU</th>
      <th>Description</th>
      <th>discount</th>
      <th>quantity</th>
      <th>sales_price</th>
      <th>void</th>
    </tr>
  </thead>
  <tbody>
  <% @ticket.line_items.each do |item| %>
    <tr>
      <td><%= item.id -%></td>
      <td><%= item.sku -%></td>
      <td><%= -%></td>
      <td><%= item.discount -%></td>
      <td><%= item.quantity -%></td>
      <td><%= item.sales_price -%></td>
      <td><%= item.void -%></td>
    </tr>
  <% end %>
  </tbody>
</table>

<table class="table table-striped table-condensed table-hover table-bordered">
  <caption>Sales Ticket ID#<%= @ticket.id -%> Payments</caption>
  <thead>
    <tr>
      <th>id</th>
      <th>Amount</th>
      <th>Payment Type</th>
    </tr>
  </thead>
  <tbody>
  <% @ticket.payments.each do |payment| %>
    <tr>
      <td><%= payment.id -%></td>
      <td><%= payment.amount-%></td>
      <td><%= payment.payment_type.description -%></td>
    </tr>
  <% end %>
  </tbody>
</table>
